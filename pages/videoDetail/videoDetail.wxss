/* pages/videoDetail/videoDetail.wxss */

page {
  background-color: #f0f0f0;
}

.video-text-title {
  margin-left: 20px;
  font-size: 16px;
  margin-right: 20px;
  color: #fff;
}

.video-text-category {
  margin-left: 20px;
  font-size: 14px;
  color: #fff;
}

.video-text-desc {
  font-size: 13px;
  text-indent: 10px;
  color: #fff;
}

.video-recommend_title_view {
  line-height: 30px;
  position: absolute;
  left: 0;
  top: 60px;
  width: 100%;
}

.video-recommend_title_text {
  font-size: 16px;
  color: #fff;
  vertical-align: center;
}

.video-recommend_root_view {
  width: 100%;
  height: 150px;
  line-height: 150px;
  position: relative;
  text-align: center;
}

.video-recommend_image {
  width: 100%;
  height: 100%;
}

.video-recommend_image-cover {
  width: 100%;
  height: 100%;
  background-color: #000;
  position: absolute;
  top: 0;
  border-radius: 8px;
  opacity: 0.4;
}