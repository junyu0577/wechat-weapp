/**index.wxss**/

page {
  background-color: #f0f0f0;
}

.swiper {
  width: 100%;
  height: 180px;
}

.rankList-list-title-view {
  line-height: 30px;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 30px;
  font-size: 14px;
  background-color: rgb(255, 255, 255);
  opacity: 0.7;
}

.rankList-list-title {
  top: 3px;
  color: #262626;
  font-size: 14px;
  height: 25px;
  position: absolute;
  left: 60px;
}

.rankList-list-tags {
  color: #7e7d7d;
  font-size: 12px;
  height: 25px;
  position: absolute;
  left: 60px;
  top: 22px;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.rankList-list-image {
  width: 100%;
  height: 200px;
}

.rankList-list-root-view {
  position: relative;
  text-align: center;
  height: 250px;
}

.rankList-list-view {
  width: 100%;
  height: 50px;
  line-height: 50px;
}

.rankList-list-author-icon {
  width: 40px;
  height: 40px;
  float: left;
  margin-top: 5px;
  margin-left: 10px;
  border-radius: 100px;
}

/* 加载更多 开始 */

.page__bd {
  padding-bottom: 10px;
}

.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}

.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}

.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

/* 加载更多 结束 */
