/* pages/userCenter/user_center.wxss */

page {
  background-color: #f0f0f0;
}

.user-center-user-background {
  width: 100%;
  height: 120px;
  background-color: #ddd;
  line-height: 120px;
  /*background: linear-gradient(to  right, #b3110e, #ffaa9c);*/
}

.user-center-user-background-info-view {
  background-color: #fff;
  width: 80%;
  height: 120px;
  line-height: 120px;
  position: absolute;
  left: 10%;
  margin: 50px 0 50px 0;
  border: 1px solid #fff;
  border-radius: 8px;
}

.user-center-username-view {
  display: block;
  height: 20px;
  color: #262626;
  text-align: center;
}

.user-center-unitname-view {
  display: block;
  height: 20px;
  font-size: 12px;
  color: #666;
  text-align: center;
  margin-top: 3px;
}

.user-center-user-avatar {
  width: 80px;
  height: 80px;
  position: absolute;
  left: 50%;
  top: 10px;
  margin: 0 0 0 -40px;
  border-radius: 100px;
}

.user-center-list-outer-view {
  height: 50px;
  background-color: #fff;
  line-height: 50px;
  margin-top: 70px;
  margin-left: 10%;
  margin-right: 10%;
  border: 1pxsolid #fff;
  border-radius: 8px;
}

.user-center-list-left-image {
  width: 20px;
  height: 22px;
  margin-left: 20px;
  vertical-align: middle;
}

.user-center-list-right-image {
  width: 6px;
  height: 12px;
  float: right;
  margin-right: 20px;
  margin-top: 20px;
}

.user-center-list-text {
  margin-left: 20px;
  vertical-align: middle;
  font-size: 12px;
  color: #262626;
}

.user-center-login-btn {
  position: absolute;
  top: 50%;
  width: 80%;
  margin-left: 10%;
  font-size: 16px;
  height: 40px;
  margin-top: -20px;
}
