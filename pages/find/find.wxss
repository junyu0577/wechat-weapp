/* pages/find/find.wxss */

.find-list-image-cover {
  width: 100%;
  height: 180px;
  background-color: #000;
  position: absolute;
  top: 0;
  border-radius: 8px;
  opacity: 0.4;
}

.find-list-image {
  width: 100%;
  height: 180px;
  border-radius: 8px;
}

.find-list-view-left {
  width: 48%;
  height: 180px;
  float: left;
  margin-top: 5px;
  margin-left: 5px;
  line-height: 180px;
  position: relative;
  text-align: center;
}

.find-list-view-right {
  width: 48%;
  height: 180px;
  float: right;
  margin-right: 5px;
  margin-top: 5px;
  position: relative;
  text-align: center;
  line-height: 180px;
}

.find-list-text-view {
  width: 100%;
  height: 30px;
  line-height: 30px;
  position: absolute;
  top: 50%;
  margin-top: -15px;
  text-align: center;
}

.find-list-text {
  color: #fff;
  font-size: 18px;
  font-weight: bold;
}
